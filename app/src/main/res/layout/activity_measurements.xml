<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.coe.jlgarcia.eternalvulture.InitialDataInfo">

    <RadioButton
        android:id="@+id/radio_stream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Directly In Stream"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="34dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Measurment Method"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="0dp" />

    <RadioButton
        android:id="@+id/radio-bucket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From Bucket"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="34dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Measurments"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="66dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dissolved Oxygen"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="98dp" />

    <EditText
        android:id="@+id/oxygen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="mg/L"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="85dp" />

    <EditText
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="°C"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="142dp" />

    <EditText
        android:id="@+id/ph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="pH units"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="198dp" />

    <EditText
        android:id="@+id/conductance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="µS"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="264dp" />

    <EditText
        android:id="@+id/turbidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="NTU"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="326dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Temp."
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="156dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pH"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="212dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sp. Conductance"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="279dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turbidity"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="340dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="479dp"
        tools:layout_editor_absoluteY="474dp" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="445dp" />
</android.support.constraint.ConstraintLayout>
